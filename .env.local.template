# =============================================================================
# BUILD ENVIRONMENT
# =============================================================================
HOPMED_BUILD_ENVIRONMENT=development
HOPMED_BUILD_VERSION=1.0.0-dev
HOPMED_DEBUG_MODE=true
HOPMED_DEMO_MODE=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
HOPMED_API_BASE_URL=http://141.94.71.13:3001/api/v1
HOPMED_API_TIMEOUT=30000

# =============================================================================
# VIDEO SERVICES
# =============================================================================
# ‚ö†Ô∏è  Add your development Daily.co API key here
# Ask team lead for development API keys
HOPMED_VIDEO_DAILY_API_KEY=your-development-daily-api-key
HOPMED_VIDEO_DAILY_DOMAIN=mbinina.daily.co

# =============================================================================
# FEATURE FLAGS
# =============================================================================
HOPMED_FEATURE_VIDEO_ENABLED=true
HOPMED_FEATURE_HEALTH_ENABLED=true
HOPMED_FEATURE_ANALYTICS_ENABLED=true
HOPMED_FEATURE_PUSH_NOTIFICATIONS_ENABLED=true
HOPMED_FEATURE_AGORA_ENABLED=false

# =============================================================================
# MONITORING (Optional for development)
# =============================================================================
